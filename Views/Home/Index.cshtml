@{
    ViewData["Title"] = "Home";
}
@section Styles {
    <link rel="stylesheet" href="~/css/views/home.css" asp-append-version="true" />
}

<section class="home-hero">
    <div class="home-hero__container">
        <!-- Left Column - Content -->
        <div class="home-hero__content">
            <h1 class="home-hero__title">
                Healing Together, Growing Stronger
            </h1>
            <p class="home-hero__description">
                Join a supportive community where trauma survivors share their stories, find hope, 
                and build resilience together. You're not alone in your journey.
            </p>
            <div class="home-hero__actions">
                <a class="home-hero__btn" asp-controller="Auth" asp-action="Register">
                    Join Our Community
                </a>
                <a class="home-hero__btn home-hero__btn--secondary" asp-controller="Home" asp-action="About">
                    Learn More
                </a>
            </div>
        </div>
        
        <!-- Right Column - Image -->
        <div class="home-hero__image-wrapper">
            <div class="home-hero__image-card">
                <img class="home-hero__image" 
                     src="~/images/hero-home.webp" 
                     alt="Diverse group of supportive community members smiling together" />
            </div>
            <!-- Decorative Elements -->
            <div class="home-hero__decoration home-hero__decoration--top" aria-hidden="true"></div>
            <div class="home-hero__decoration home-hero__decoration--bottom" aria-hidden="true"></div>
        </div>
    </div>
</section>

<section class="home-stories">
    <div class="home-stories__container">
        <!-- Header -->
        <header class="home-stories__header">
            <h2 class="home-stories__title">Stories of Hope</h2>
            <p class="home-stories__subtitle">
                Real stories from our community members sharing their journeys of healing and growth
            </p>
        </header>
        
        <!-- Stories Grid -->
        <div class="home-stories__grid">
            <!-- Story Card 1 -->
            <article class="home-stories__card">
                <h3 class="home-stories__card-title">Finding Light After Darkness</h3>
                <p class="home-stories__card-excerpt">
                    "I never thought I'd be able to trust again, but this community showed me that healing is possible. Today, I'm stronger than ever..."
                </p>
                <div class="home-stories__card-footer">
                    <div class="home-stories__author">
                        <img class="home-stories__author-avatar" 
                             src="~/images/avatars/sarah-m.jpg" 
                             alt="Sarah M." />
                        <span class="home-stories__author-name">Sarah M.</span>
                    </div>
                    <a class="home-stories__read-more" asp-controller="Stories" asp-action="Details" asp-route-id="1">
                        Read More
                    </a>
                </div>
            </article>
            
            <!-- Story Card 2 -->
            <article class="home-stories__card">
                <h3 class="home-stories__card-title">Rebuilding My Confidence</h3>
                <p class="home-stories__card-excerpt">
                    "The support I found here helped me rediscover my worth. Every small step forward felt like a victory..."
                </p>
                <div class="home-stories__card-footer">
                    <div class="home-stories__author">
                        <img class="home-stories__author-avatar" 
                             src="~/images/avatars/marcus-j.jpg" 
                             alt="Marcus J." />
                        <span class="home-stories__author-name">Marcus J.</span>
                    </div>
                    <a class="home-stories__read-more" asp-controller="Stories" asp-action="Details" asp-route-id="2">
                        Read More
                    </a>
                </div>
            </article>
            
            <!-- Story Card 3 -->
            <article class="home-stories__card">
                <h3 class="home-stories__card-title">A New Chapter Begins</h3>
                <p class="home-stories__card-excerpt">
                    "Connecting with others who understood my journey made all the difference. I'm now helping others find their path..."
                </p>
                <div class="home-stories__card-footer">
                    <div class="home-stories__author">
                        <img class="home-stories__author-avatar" 
                             src="~/images/avatars/elena-r.jpg" 
                             alt="Elena R." />
                        <span class="home-stories__author-name">Elena R.</span>
                    </div>
                    <a class="home-stories__read-more" asp-controller="Stories" asp-action="Details" asp-route-id="3">
                        Read More
                    </a>
                </div>
            </article>
        </div>
        
        <!-- View All CTA -->
        <div class="home-stories__cta">
            <a class="home-stories__btn" asp-controller="Stories" asp-action="Index">
                View All Stories
            </a>
        </div>
    </div>
</section>

