@{
    ViewData["Title"] = "Donate";
}

@section Styles {
    <link rel="stylesheet" href="~/css/views/donate.css" asp-append-version="true" />
}

<div class="donate">
    <section class="donate__hero">
        <h1 class="donate__title">Donate</h1>
        <p class="donate__description">
            Your generous contribution helps us build a stronger, more caring community. 
            Every donation, no matter the size, makes a meaningful difference in the lives 
            of those we serve together.
        </p>
    </section>

    <div class="donate__content">
        <!-- Bank Details Card -->
        <section class="donate__card donate__card--bank">
            <h2 class="donate__card-title">
                <i class="fa-solid fa-landmark" aria-hidden="true"></i>
                Bank Details
            </h2>
            
            <div class="donate__bank-info">
                <div class="donate__field">
                    <label class="donate__label">Bank Name</label>
                    <div class="donate__value-wrapper">
                        <span class="donate__value">First National Bank</span>
                        <button class="donate__copy-btn" onclick="copyToClipboard('First National Bank')" aria-label="Copy bank name">
                            <i class="fa-regular fa-copy" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>

                <div class="donate__field">
                    <label class="donate__label">Account Number</label>
                    <div class="donate__value-wrapper">
                        <span class="donate__value">62 8791 2345 6</span>
                        <button class="donate__copy-btn" onclick="copyToClipboard('62 8791 2345 6')" aria-label="Copy account number">
                            <i class="fa-regular fa-copy" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>

                <div class="donate__field">
                    <label class="donate__label">Branch Code</label>
                    <div class="donate__value-wrapper">
                        <span class="donate__value">250655</span>
                        <button class="donate__copy-btn" onclick="copyToClipboard('250655')" aria-label="Copy branch code">
                            <i class="fa-regular fa-copy" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Reference Format Card -->
        <section class="donate__card donate__card--reference">
            <h3 class="donate__card-subtitle">
                <i class="fa-solid fa-lightbulb" aria-hidden="true"></i>
                Reference Format
            </h3>
            
            <div class="donate__reference-content">
                <p class="donate__reference-instruction">Please use this format for your reference:</p>
                
                <div class="donate__reference-format">
                    DONATE-[Your Name]-[Date]
                </div>
                
                <p class="donate__reference-example">Example: DONATE-JohnSmith-2024</p>
            </div>
        </section>
    </div>

    <!-- Submit Proof of Payment Section -->
    <section class="donate__card donate__card--submit">
        <h2 class="donate__card-title">
            <i class="fa-regular fa-file-lines" aria-hidden="true"></i>
            Submit Proof of Payment
        </h2>
        
        <p class="donate__submit-description">
            After making your donation, please send us your proof of payment so we can 
            acknowledge your contribution and provide you with a receipt.
        </p>

        <div class="donate__submit-options">
            <div class="donate__submit-option">
                <div class="donate__submit-header">
                    <i class="fa-regular fa-envelope" aria-hidden="true"></i>
                    <h4 class="donate__submit-title">Email</h4>
                </div>
                <p class="donate__submit-text">Send your proof of payment to:</p>
                <span class="donate__submit-contact">donations@communitycare.org</span>
            </div>

            <div class="donate__submit-option">
                <div class="donate__submit-header">
                    <i class="fa-brands fa-whatsapp" aria-hidden="true"></i>
                    <h4 class="donate__submit-title">WhatsApp</h4>
                </div>
                <p class="donate__submit-text">Send via WhatsApp to:</p>
                <span class="donate__submit-contact">+27 12 345 6789</span>
            </div>
        </div>
    </section>

    <!-- Important Notice -->
    <section class="donate__notice">
        <i class="fa-solid fa-triangle-exclamation" aria-hidden="true"></i>
        <div class="donate__notice-content">
            <h4 class="donate__notice-title">Important Notice</h4>
            <p class="donate__notice-text">
                We do not process online payments on this website. All donations must be 
                made via bank transfer using the details provided above.
            </p>
            <p class="donate__notice-privacy">
                <strong>Privacy Note:</strong> Your personal information is protected in accordance 
                with POPIA (Protection of Personal Information Act). We only use your details to 
                acknowledge donations and provide receipts.
            </p>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                // Optional: Show a toast notification
                alert('Copied to clipboard!');
            }).catch(err => {
                console.error('Failed to copy: ', err);
            });
        }
    </script>
}

