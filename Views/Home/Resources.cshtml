@{
    ViewData["Title"] = "Resources";
}

@section Styles {
    <link rel="stylesheet" href="~/css/views/resources.css" asp-append-version="true" />
}

<div class="resources">
    <section class="resources-hero">
        <div class="resources-hero__container">
            <h1 class="resources-hero__title">Resources</h1>
            <p class="resources-hero__description">
                Find trusted support services, crisis assistance, and helpful resources in your area. 
                We've carefully curated these resources to help you access the support you need.
            </p>
            
            <div class="resources-tabs">
                <button class="resources-tabs__btn resources-tabs__btn--active" data-category="crisis">Crisis Lines</button>
                <button class="resources-tabs__btn" data-category="trauma">Trauma & GBV</button>
                <button class="resources-tabs__btn" data-category="legal">Legal Help</button>
                <button class="resources-tabs__btn" data-category="other">Other</button>
            </div>
        </div>
    </section>

    <section class="resources-cards">
        <div class="resources-cards__container">
            
            <div class="resources-card" data-category="crisis">
                <div class="resources-card__header">
                    <h3 class="resources-card__title">SADAG</h3>
                    <i class="fas fa-phone resources-card__icon"></i>
                </div>
                <p class="resources-card__description">
                    24/7 support for mental health, depression, and anxiety.
                </p>
                <div class="resources-card__contact">
                    <div class="resources-card__phone">
                        <i class="fas fa-phone resources-card__phone-icon"></i>
                        <span class="resources-card__phone-number">0800 567 567</span>
                    </div>
                    <div class="resources-card__website">
                        <i class="fas fa-external-link-alt resources-card__link-icon"></i>
                        <a href="https://www.sadag.org" target="_blank" rel="noopener noreferrer" class="resources-card__link">sadag.org</a>
                    </div>
                    <p class="resources-card__availability">Available 24/7</p>
                </div>
            </div>

            <div class="resources-card" data-category="crisis">
                <div class="resources-card__header">
                    <h3 class="resources-card__title">LifeLine South Africa</h3>
                    <i class="fas fa-heart resources-card__icon"></i>
                </div>
                <p class="resources-card__description">
                    Confidential counselling services for emotional distress and crisis.
                </p>
                <div class="resources-card__contact">
                    <div class="resources-card__phone">
                        <i class="fas fa-phone resources-card__phone-icon"></i>
                        <span class="resources-card__phone-number">0861 322 322</span>
                    </div>
                    <div class="resources-card__website">
                        <i class="fas fa-external-link-alt resources-card__link-icon"></i>
                        <a href="https://lifelinesa.co.za" target="_blank" rel="noopener noreferrer" class="resources-card__link">lifelinesa.co.za</a>
                    </div>
                    <p class="resources-card__availability">Available 24/7</p>
                </div>
            </div>

            <div class="resources-card" data-category="trauma">
                <div class="resources-card__header">
                    <h3 class="resources-card__title">GBV Command Centre</h3>
                    <i class="fas fa-hands-helping resources-card__icon"></i>
                </div>
                <p class="resources-card__description">
                    National 24/7 hotline for Gender-Based Violence support.
                </p>
                <div class="resources-card__contact">
                    <div class="resources-card__phone">
                        <i class="fas fa-phone resources-card__phone-icon"></i>
                        <span class="resources-card__phone-number">0800 428 428</span>
                    </div>
                    <div class="resources-card__website">
                        <i class="fas fa-external-link-alt resources-card__link-icon"></i>
                        <a href="https://www.gbv.org.za" target="_blank" rel="noopener noreferrer" class="resources-card__link">gbv.org.za</a>
                    </div>
                    <p class="resources-card__availability">Available 24/7</p>
                </div>
            </div>

            <div class="resources-card" data-category="trauma">
                <div class="resources-card__header">
                    <h3 class="resources-card__title">POWA</h3>
                    <i class="fas fa-female resources-card__icon"></i>
                </div>
                <p class="resources-card__description">
                    Support, counselling, and shelter for survivors of domestic violence.
                </p>
                <div class="resources-card__contact">
                    <div class="resources-card__phone">
                        <i class="fas fa-phone resources-card__phone-icon"></i>
                        <span class="resources-card__phone-number">011 642 4345</span>
                    </div>
                    <div class="resources-card__website">
                        <i class="fas fa-external-link-alt resources-card__link-icon"></i>
                        <a href="https://www.powa.co.za" target="_blank" rel="noopener noreferrer" class="resources-card__link">powa.co.za</a>
                    </div>
                    <p class="resources-card__availability">Contact for hours</p>
                </div>
            </div>
            
            <div class="resources-card" data-category="trauma">
                <div class="resources-card__header">
                    <h3 class="resources-card__title">Rape Crisis</h3>
                    <i class="fas fa-hands-helping resources-card__icon"></i>
                </div>
                <p class="resources-card__description">
                    Counselling and support for survivors of rape and sexual violence.
                </p>
                <div class="resources-card__contact">
                    <div class="resources-card__phone">
                        <i class="fas fa-phone resources-card__phone-icon"></i>
                        <span class="resources-card__phone-number">021 447 9762</span>
                    </div>
                    <div class="resources-card__website">
                        <i class="fas fa-external-link-alt resources-card__link-icon"></i>
                        <a href="https://rapecrisis.org.za" target="_blank" rel="noopener noreferrer" class="resources-card__link">rapecrisis.org.za</a>
                    </div>
                    <p class="resources-card__availability">Available 24/7 (Counselling Line)</p>
                </div>
            </div>

            <div class="resources-card" data-category="legal">
                <div class="resources-card__header">
                    <h3 class="resources-card__title">Legal Aid SA</h3>
                    <i class="fas fa-gavel resources-card__icon"></i>
                </div>
                <p class="resources-card__description">
                    Provides free legal aid and advice to those who cannot afford it.
                </p>
                <div class="resources-card__contact">
                    <div class="resources-card__phone">
                        <i class="fas fa-phone resources-card__phone-icon"></i>
                        <span class="resources-card__phone-number">0800 110 110</span>
                    </div>
                    <div class="resources-card__website">
                        <i class="fas fa-external-link-alt resources-card__link-icon"></i>
                        <a href="https://legal-aid.co.za" target="_blank" rel="noopener noreferrer" class="resources-card__link">legal-aid.co.za</a>
                    </div>
                    <p class="resources-card__availability">Mon-Fri, 8am-4pm</p>
                </div>
            </div>
            
            <div class="resources-card" data-category="legal">
                <div class="resources-card__header">
                    <h3 class="resources-card__title">Lawyers for Human Rights</h3>
                    <i class="fas fa-balance-scale resources-card__icon"></i>
                </div>
                <p class="resources-card__description">
                    Non-profit providing free legal services on human rights issues.
                </p>
                <div class="resources-card__contact">
                    <div class="resources-card__phone">
                        <i class="fas fa-phone resources-card__phone-icon"></i>
                        <span class="resources-card__phone-number">011 339 1960 (JHB)</span>
                    </div>
                    <div class="resources-card__website">
                        <i class="fas fa-external-link-alt resources-card__link-icon"></i>
                        <a href="https://www.lhr.org.za" target="_blank" rel="noopener noreferrer" class="resources-card__link">lhr.org.za</a>
                    </div>
                    <p class="resources-card__availability">See website for regional offices</p>
                </div>
            </div>

            <div class="resources-card" data-category="other">
                <div class="resources-card__header">
                    <h3 class="resources-card__title">Childline South Africa</h3>
                    <i class="fas fa-child resources-card__icon"></i>
                </div>
                <p class="resources-card__description">
                    A 24/7 toll-free line for children to report abuse or get support.
                </p>
                <div class="resources-card__contact">
                    <div class="resources-card__phone">
                        <i class="fas fa-phone resources-card__phone-icon"></i>
                        <span class="resources-card__phone-number">116</span>
                    </div>
                    <div class="resources-card__website">
                        <i class="fas fa-external-link-alt resources-card__link-icon"></i>
                        <a href="https://www.childlinesa.org.za" target="_blank" rel="noopener noreferrer" class="resources-card__link">childlinesa.org.za</a>
                    </div>
                    <p class="resources-card__availability">Available 24/7</p>
                </div>
            </div>

            <div class="resources-card" data-category="other">
                <div class="resources-card__header">
                    <h3 class="resources-card__title">TEARS Foundation</h3>
                    <i class="fas fa-mobile-alt resources-card__icon"></i>
                </div>
                <p class="resources-card__description">
                    Free USSD service to access a database of GBV support services.
                </p>
                <div class="resources-card__contact">
                    <div class="resources-card__phone">
                        <i class="fas fa-phone resources-card__phone-icon"></i>
                        <span class="resources-card__phone-number">Dial *134*7355#</span>
                    </div>
                    <div class="resources-card__website">
                        <i class="fas fa-external-link-alt resources-card__link-icon"></i>
                        <a href="https://tears.co.za" target="_blank" rel="noopener noreferrer" class="resources-card__link">tears.co.za</a>
                    </div>
                    <p class="resources-card__availability">Available 24/7</p>
                </div>
            </div>

        </div>
    </section>

    <section class="resources-notice">
        <div class="resources-notice__container">
            <i class="fas fa-info-circle resources-notice__icon"></i>
            <div class="resources-notice__content">
                <h4 class="resources-notice__title">Important Notice</h4>
                <p class="resources-notice__text">
                    External links lead to third-party resources. While we carefully vet these organizations, 
                    we cannot guarantee the availability or quality of their services. In case of immediate danger, 
                    please call 10111 (SAPS) or 10177 (Ambulance).
                </p>
            </div>
            <i class="fas fa-external-link-alt resources-notice__link-icon"></i>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/views/resources-tab-layout.js" asp-append-version="true"></script>
}