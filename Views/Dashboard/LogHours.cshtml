@{
    ViewData["Title"] = "Log Your Hours";
}

@section Styles {
    <link rel="stylesheet" href="~/css/views/volunteer-log-hours.css" asp-append-version="true" />
}

<div class="log-hours">
    <!-- Header Section -->
    <section class="log-hours__header">
        <h1 class="log-hours__title">Log Your Hours</h1>
        <p class="log-hours__subtitle">Track your community activities and volunteer hours for validation.</p>
    </section>
    
    <!-- Main Content -->
    <div class="log-hours__content">
        <!-- Form Card -->
        <div class="log-hours__form-card">
            <h2 class="log-hours__form-title">Add New Entry</h2>
            
            <form class="log-hours__form">
                <!-- Date and Hours Row -->
                <div class="log-hours__form-row">
                    <div class="log-hours__form-group">
                        <label for="date" class="log-hours__label">Date</label>
                        <input type="date" id="date" class="log-hours__input" placeholder="mm/dd/yyyy" />
                    </div>
                    
                    <div class="log-hours__form-group">
                        <label for="hours" class="log-hours__label">Hours</label>
                        <input type="number" id="hours" class="log-hours__input" placeholder="2.5" step="0.5" min="0" />
                    </div>
                </div>
                
                <!-- Activity Dropdown -->
                <div class="log-hours__form-group">
                    <label for="activity" class="log-hours__label">Activity</label>
                    <select id="activity" class="log-hours__select">
                        <option value="">Select an activity</option>
                        <option value="workshop">Workshop</option>
                        <option value="event">Community Event</option>
                        <option value="mentoring">Mentoring</option>
                        <option value="administration">Administration</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                
                <!-- Notes Textarea -->
                <div class="log-hours__form-group">
                    <label for="notes" class="log-hours__label">Notes</label>
                    <textarea id="notes" class="log-hours__textarea" placeholder="Describe your activity and its impact..."></textarea>
                </div>
                
                <!-- File Upload -->
                <div class="log-hours__form-group">
                    <label class="log-hours__label">Attachment (Optional)</label>
                    <div class="log-hours__upload">
                        <svg class="log-hours__upload-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96zM14 13v4h-4v-4H7l5-5 5 5h-3z"/>
                        </svg>
                        <p class="log-hours__upload-text">Click to upload or drag and drop</p>
                        <p class="log-hours__upload-hint">PDF, JPG, PNG up to 10MB</p>
                    </div>
                </div>
                
                <!-- Submit Button -->
                <button type="submit" class="log-hours__submit">
                    <svg class="log-hours__submit-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                    </svg>
                    <span>Submit for Validation</span>
                </button>
            </form>
        </div>
        
        <!-- Recent Entries Card -->
        <div class="log-hours__entries-card">
            <h2 class="log-hours__entries-header">Recent Entries</h2>
            
            <div class="log-hours__entries-list">
                <!-- Entry 1: Validated -->
                <article class="entry-card">
                    <div class="entry-card__header">
                        <div class="entry-card__info">
                            <h3 class="entry-card__title">Title</h3>
                            <p class="entry-card__date">Date: Day, Month, Year</p>
                        </div>
                        <span class="entry-card__status entry-card__status--validated">Validated</span>
                    </div>
                    <p class="entry-card__hours">Hours</p>
                    <p class="entry-card__description">Description</p>
                </article>
                
                <!-- Entry 2: Pending -->
                <article class="entry-card">
                    <div class="entry-card__header">
                        <div class="entry-card__info">
                            <h3 class="entry-card__title">Title</h3>
                            <p class="entry-card__date">Date: Day, Month, Year</p>
                        </div>
                        <span class="entry-card__status entry-card__status--pending">Pending</span>
                    </div>
                    <p class="entry-card__hours">Hours</p>
                    <p class="entry-card__description">Description</p>
                </article>
                
                <!-- Entry 3: Needs Info -->
                <article class="entry-card">
                    <div class="entry-card__header">
                        <div class="entry-card__info">
                            <h3 class="entry-card__title">Title</h3>
                            <p class="entry-card__date">Date: Day, Month, Year</p>
                        </div>
                        <span class="entry-card__status entry-card__status--needs-info">Needs Info</span>
                    </div>
                    <p class="entry-card__hours">Hours</p>
                    <p class="entry-card__description">Description</p>
                </article>
            </div>
            
            <!-- View All Button -->
            <button class="log-hours__view-all">View All Entries</button>
        </div>
    </div>
    
    <!-- Hours Summary Section -->
    <section class="log-hours__summary">
        <h2 class="log-hours__summary-title">Hours Summary</h2>
        
        <div class="log-hours__summary-grid">
            <!-- Total Hours -->
            <div class="summary-card summary-card--total">
                <p class="summary-card__value">24.5</p>
                <p class="summary-card__label">Total Hours</p>
            </div>
            
            <!-- Validated Hours -->
            <div class="summary-card summary-card--validated">
                <p class="summary-card__value">18.0</p>
                <p class="summary-card__label">Validated</p>
            </div>
            
            <!-- Pending Hours -->
            <div class="summary-card summary-card--pending">
                <p class="summary-card__value">4.5</p>
                <p class="summary-card__label">Pending</p>
            </div>
            
            <!-- Needs Info Hours -->
            <div class="summary-card summary-card--needs-info">
                <p class="summary-card__value">2.0</p>
                <p class="summary-card__label">Needs Info</p>
            </div>
        </div>
    </section>
</div>

