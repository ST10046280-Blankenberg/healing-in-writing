@{
    ViewData["Title"] = "Dashboard";
}

@section Styles {
    <link rel="stylesheet" href="~/css/views/volunteer-dashboard.css" asp-append-version="true" />
}

<div class="volunteer-dashboard">
    <!-- Welcome Section -->
    <section class="volunteer-dashboard__welcome">
        <div class="volunteer-dashboard__welcome-header">
            <h1 class="volunteer-dashboard__title">Hi Luke, welcome back! ðŸ‘‹</h1>
            <p class="volunteer-dashboard__subtitle">Ready to make a difference today?</p>
        </div>
        
        <!-- Stats Cards -->
        <div class="volunteer-dashboard__stats">
            <!-- My Stories Card -->
            <div class="stats-card">
                <div class="stats-card__header">
                    <div class="stats-card__icon stats-card__icon--stories">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M21 5c-1.11-.35-2.33-.5-3.5-.5-1.95 0-4.05.4-5.5 1.5-1.45-1.1-3.55-1.5-5.5-1.5S2.45 4.9 1 6v14.65c0 .25.25.5.5.5.1 0 .15-.05.25-.05C3.1 20.45 5.05 20 6.5 20c1.95 0 4.05.4 5.5 1.5 1.35-.85 3.8-1.5 5.5-1.5 1.65 0 3.35.3 4.75 1.05.1.05.15.05.25.05.25 0 .5-.25.5-.5V6c-.6-.45-1.25-.75-2-1zm0 13.5c-1.1-.35-2.3-.5-3.5-.5-1.7 0-4.15.65-5.5 1.5V8c1.35-.85 3.8-1.5 5.5-1.5 1.2 0 2.4.15 3.5.5v11.5z"/>
                        </svg>
                    </div>
                    <span class="stats-card__number">12</span>
                </div>
                <h3 class="stats-card__label">My Stories</h3>
                <p class="stats-card__description">Published & drafts</p>
            </div>
            
            <!-- My Events Card -->
            <div class="stats-card">
                <div class="stats-card__header">
                    <div class="stats-card__icon stats-card__icon--events">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V10h14v10zM9 14H7v-2h2v2zm4 0h-2v-2h2v2zm4 0h-2v-2h2v2zm-8 4H7v-2h2v2zm4 0h-2v-2h2v2zm4 0h-2v-2h2v2z"/>
                        </svg>
                    </div>
                    <span class="stats-card__number">3</span>
                </div>
                <h3 class="stats-card__label">My Events</h3>
                <p class="stats-card__description">Upcoming this month</p>
            </div>
            
            <!-- My Hours Card -->
            <div class="stats-card">
                <div class="stats-card__header">
                    <div class="stats-card__icon stats-card__icon--hours">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
                        </svg>
                    </div>
                    <span class="stats-card__number">24</span>
                </div>
                <h3 class="stats-card__label">My Hours</h3>
                <p class="stats-card__description">Volunteer time logged</p>
            </div>
        </div>
    </section>
    
    <!-- Main Content Area -->
    <div class="volunteer-dashboard__content">
        <!-- Notifications Section -->
        <section class="volunteer-dashboard__notifications">
            <div class="notifications-panel">
                <h2 class="notifications-panel__title">Notifications</h2>
                
                <div class="notifications-panel__list">
                    <!-- Notification 1 - Success -->
                    <div class="notification notification--highlighted">
                        <div class="notification__icon notification__icon--success">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                            </svg>
                        </div>
                        <div class="notification__content">
                            <p class="notification__message">Your story "Finding Hope" has been approved!</p>
                            <span class="notification__time">2 hours ago</span>
                        </div>
                    </div>
                    
                    <!-- Notification 2 - Info -->
                    <div class="notification">
                        <div class="notification__icon notification__icon--info">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V10h14v10z"/>
                            </svg>
                        </div>
                        <div class="notification__content">
                            <p class="notification__message">Reminder: Writing Workshop tomorrow at 2 PM</p>
                            <span class="notification__time">1 day ago</span>
                        </div>
                    </div>
                    
                    <!-- Notification 3 - Comment -->
                    <div class="notification">
                        <div class="notification__icon notification__icon--comment">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H6l-2 2V4h16v12z"/>
                            </svg>
                        </div>
                        <div class="notification__content">
                            <p class="notification__message">Sarah loved your story and left a comment</p>
                            <span class="notification__time">3 days ago</span>
                        </div>
                    </div>
                    
                    <!-- Notification 4 - Milestone -->
                    <div class="notification">
                        <div class="notification__icon notification__icon--milestone">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                            </svg>
                        </div>
                        <div class="notification__content">
                            <p class="notification__message">You've reached 20 volunteer hours milestone!</p>
                            <span class="notification__time">1 week ago</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        <!-- Quick Actions Section -->
        <aside class="volunteer-dashboard__actions">
            <div class="quick-actions">
                <h2 class="quick-actions__title">Quick Actions</h2>
                
                <div class="quick-actions__list">
                    <a asp-controller="Stories" asp-action="Submit" class="action-button action-button--primary">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
                        </svg>
                        <span>Submit a Story</span>
                    </a>
                    
                    <a asp-controller="Dashboard" asp-action="MyStories" class="action-button action-button--secondary">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M6 4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h9l5-5V6c0-1.1-.9-2-2-2H6zm8 13V7h3v8h-3zm-2 0H6V7h6v10z" />
                        </svg>
                        <span>My Stories</span>
                    </a>

                    <a asp-controller="Dashboard" asp-action="MyEvents" class="action-button action-button--outline">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V10h14v10zM9 14H7v-2h2v2zm4 0h-2v-2h2v2zm4 0h-2v-2h2v2zm-8 4H7v-2h2v2zm4 0h-2v-2h2v2zm4 0h-2v-2h2v2z"/>
                        </svg>
                        <span>Browse Events</span>
                    </a>

                    @* Log Hours button - only for volunteers *@
                    @if (User.IsInRole("Volunteer"))
                    {
                        <a asp-controller="Dashboard" asp-action="LogHours" class="action-button action-button--outline">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
                            </svg>
                            <span>Log Hours</span>
                        </a>
                    }
                </div>
            </div>
        </aside>
    </div>
</div>

