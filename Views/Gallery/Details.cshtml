@{
    ViewData["Title"] = "Gallery Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/shared/page-hero.css" />
    <link rel="stylesheet" href="~/css/views/gallery-details.css" asp-append-version="true" />
}

<main class="gallery">

    <!-- Details Card -->
    <section class="gallery-details">
        <div class="gallery-details__container">
            <!-- Back Arrow -->
            <div class="gallery-details__nav">
                <button class="gallery-details__back" aria-label="Back">
                    <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
                        <rect width="40" height="40" rx="8" fill="#fff"/>
                        <path d="M24 12L16 20L24 28" stroke="#1D1B20" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </button>
            </div>
            <!-- Main Image -->
            <div class="gallery-details__main-image">
                <img src="https://via.placeholder.com/1241x412?text=Main+Image" alt="Event Main Image" class="gallery-details__main-img" />
            </div>
            <!-- Thumbnails Scroller -->
            <div class="gallery-details__thumbnails">
                <button class="gallery-details__thumb-arrow gallery-details__thumb-arrow--left" aria-label="Previous">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <rect width="24" height="24" rx="4" fill="#fff"/>
                        <path d="M15 7L9 12L15 17" stroke="#1D1B20" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </button>
                <div class="gallery-details__thumb-list">
                    <img src="https://via.placeholder.com/88x88?text=1" alt="Thumb 1" class="gallery-details__thumb" />
                    <img src="https://via.placeholder.com/88x88?text=2" alt="Thumb 2" class="gallery-details__thumb" />
                    <img src="https://via.placeholder.com/88x88?text=3" alt="Thumb 3" class="gallery-details__thumb" />
                    <img src="https://via.placeholder.com/88x88?text=4" alt="Thumb 4" class="gallery-details__thumb" />
                    <img src="https://via.placeholder.com/88x88?text=5" alt="Thumb 5" class="gallery-details__thumb" />
                    <img src="https://via.placeholder.com/88x88?text=6" alt="Thumb 6" class="gallery-details__thumb" />
                    <img src="https://via.placeholder.com/88x88?text=7" alt="Thumb 7" class="gallery-details__thumb" />
                    <img src="https://via.placeholder.com/88x88?text=8" alt="Thumb 8" class="gallery-details__thumb" />
                </div>
                <button class="gallery-details__thumb-arrow gallery-details__thumb-arrow--right" aria-label="Next">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <rect width="24" height="24" rx="4" fill="#fff"/>
                        <path d="M9 7L15 12L9 17" stroke="#1D1B20" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </button>
            </div>
            <!-- Event Metadata -->
            <div class="gallery-details__meta">
                <h2 class="gallery-details__title">Event Name</h2>
                <div class="gallery-details__date">March 10, 2025</div>
                <div class="gallery-details__location">Location</div>
            </div>
        </div>
    </section>
</main>
