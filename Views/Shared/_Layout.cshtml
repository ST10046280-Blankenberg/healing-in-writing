                    </div>
                    <p class="footer__description">
                        Join our online community for daily support and inspiration.
                    </p>
                </section>
            </div>

            <div class="footer__bottom">
                <p class="footer__copyright">
                    &copy; @DateTime.Now.Year Healing In Writing. All rights reserved.
                </p>
                <ul class="footer__policies">
                    <li>
                        <a class="footer__policy-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                    </li>
                    <li>
                        <a class="footer__policy-link" asp-area="" asp-controller="Home" asp-action="Terms">Terms of Service</a>
                    </li>
                    <li>
                        <a class="footer__policy-link" asp-area="" asp-controller="Home" asp-action="Accessibility">Accessibility</a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
