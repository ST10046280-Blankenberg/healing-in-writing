@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@{
    // TODO: Align layout structure with the eventual design system before launch.
    bool isAdmin = User.Identity.IsAuthenticated && User.IsInRole("Admin");
    var currentController = Context.Request.RouteValues["controller"]?.ToString();
    var currentArea = Context.Request.RouteValues["area"]?.ToString();
    bool isAdminTabActive = string.Equals(currentArea, "Admin", StringComparison.OrdinalIgnoreCase)
        || string.Equals(currentController, "Admin", StringComparison.OrdinalIgnoreCase)
        || (ViewData["IsAdminSection"] as bool? == true);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Healing In Writing</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/base/_variables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HealingInWriting.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="header">
        <div class="header__container">
            <a class="header__brand" asp-controller="Home" asp-action="Index">
                <img class="header__logo" src="~/images/logo.png" alt="Healing In Writing Logo" />
                <h1 class="header__brand-name">Healing-In-Writing</h1>
            </a>

            <button class="header__mobile-toggle" type="button" aria-label="Toggle navigation" aria-expanded="false">
                <svg class="header__mobile-toggle-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>

            <nav class="header__nav" aria-label="Main navigation">
                <ul class="header__nav-list">
                    <li class="header__nav-item">
                        <a class="header__nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="header__nav-item">
                        <a class="header__nav-link" asp-area="" asp-controller="Stories" asp-action="Index">Stories</a>
                    </li>
                    <li class="header__nav-item">
                        <a class="header__nav-link" asp-area="" asp-controller="Events" asp-action="Index">Events</a>
                    </li>
                    <li class="header__nav-item">
                        <a class="header__nav-link" asp-area="" asp-controller="Books" asp-action="Index">Books</a>
                    </li>
                    <li class="header__nav-item">
                        <a class="header__nav-link" asp-area="" asp-controller="Home" asp-action="Resources">Resources</a>
                    </li>
                    <li class="header__nav-item">
                        <a class="header__nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    @* Admin tab only for admins *@ 
                    @if (isAdmin)
                    {
                        <li class="header__nav-item">
                            <a class="header__nav-link @(isAdminTabActive ? "header__nav-link--active" : "")"
                               asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a>
                        </li>
                    }
                </ul>
                <div class="header__auth">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span class="header__auth-user">
                            @* Display full name if available, else fallback to username *@
                            @{
                                var displayName = User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value ?? User.Identity.Name;
                            }
                            <span class="header__auth-name">@displayName</span>
                        </span>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="header__auth-logout" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="header__auth-link header__auth-link--logout">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a class="header__auth-link" asp-controller="Auth" asp-action="Auth">Login</a>
                        <a class="header__auth-link header__auth-link--signup" asp-controller="Auth" asp-action="Auth" asp-route-mode="register">Sign Up</a>
                    }
                </div>
            </nav>
        </div>
    </header>

    @* Admin sub-navbar: only for admins and when Admin tab is selected *@
    @if (isAdmin && isAdminTabActive)
    {
        <div class="admin-subnav">
            @await Html.PartialAsync("~/Views/_Layouts/_AdminLayout.cshtml")
        </div>
    }

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer__container">
            <div class="footer__content">
                <section class="footer__section">
                    <div class="footer__brand">
                        <img class="footer__logo" src="~/images/footer-logo.png" alt="Healing In Writing Logo" />
                        <h2 class="footer__brand-name">Healing-In-Writing</h2>
                    </div>
                    <p class="footer__description">
                        Empowering healing through the written word. Join our community of writers,
                        storytellers, and supporters dedicated to mental health awareness and recovery.
                    </p>
                </section>

                <section class="footer__section">
                    <h3 class="footer__heading">Quick Links</h3>
                    <ul class="footer__list">
                        <li class="footer__list-item">
                            <a class="footer__link" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="footer__list-item">
                            <a class="footer__link" asp-area="" asp-controller="Stories" asp-action="Index">Stories</a>
                        </li>
                        <li class="footer__list-item">
                            <a class="footer__link" asp-area="" asp-controller="Events" asp-action="Index">Events</a>
                        </li>
                        <li class="footer__list-item">
                            <a class="footer__link" asp-area="" asp-controller="Books" asp-action="Index">Books</a>
                        </li>
                        <li class="footer__list-item">
                            <a class="footer__link" asp-area="" asp-controller="Resources" asp-action="Index">Resources</a>
