@model HealingInWriting.Models.Stories.StorySummaryViewModel

<article class="story-card story-card--large">
    <div class="story-card__image" style="background-image: url('@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/images/placeholder-story.jpg" : Model.CoverImageUrl)')"></div>
    <div class="story-card__tags">
        @foreach (var tag in Model.Tags)
        {
            <span class="story-card__tag">
                <span class="story-card__tag-text">@tag</span>
            </span>
        }
    </div>
    <time class="story-card__date">@Model.CreatedAt.ToString("MMMM dd, yyyy")</time>
    <div class="story-card__content">
        <h2 class="story-card__title">@Model.Title</h2>
        <p class="story-card__author">@(!string.IsNullOrWhiteSpace(Model.AuthorName) ? Model.AuthorName : "Anonymous")</p>
        <p class="story-card__description">@Model.Summary</p>
    </div>
    <a href="@Url.Action("Details", "Stories", new { area = "", id = Model.StoryId })" class="btn btn--secondary btn--small">Read More</a>
</article>
