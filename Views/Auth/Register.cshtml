@model HealingInWriting.Models.Auth.RegisterVm
@{
    ViewData["Title"] = "Join Our Community";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Healing In Writing</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/signup.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="signup-container">
        <div class="signup-left">
            <div class="signup-left-content">
                <h1 class="signup-welcome">Welcome Back</h1>
                <p class="signup-subtitle">Connect with your community</p>
                <p class="signup-login-prompt">Already have an account?</p>
                <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-light">Log In</a>
            </div>
        </div>

        <div class="signup-right">
            <div class="signup-form-container">
                <h1 class="signup-title">Join Our Community</h1>
                <p class="signup-description">Create your account and start connecting</p>

                <form asp-action="Register" asp-controller="Auth" method="post" class="signup-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="FirstName">First Name</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="LastName">Last Name</label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email">Email Address</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Create a password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Create Account</button>

                    <p class="signup-terms">
                        By signing up, you agree to our
                        <a href="@Url.Action("Terms", "Home")" class="hyperlink">Terms</a> and
                        <a href="@Url.Action("Privacy", "Home")" class="hyperlink">Privacy Policy</a>
                    </p>

                    <div class="signup-divider">
                        <span>Or continue with</span>
                    </div>

                    <div class="signup-social">
                        <button type="button" class="btn btn-social btn-google">
                            <i class="fa-brands fa-google"></i>
                            Google
                        </button>
                        <button type="button" class="btn btn-social btn-facebook">
                            <i class="fa-brands fa-facebook-f"></i>
                            Facebook
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
