@model HealingInWriting.Models.Filters.StoriesFilterViewModel

<form asp-area="" asp-controller="Stories" asp-action="Index" method="get" class="search-bar search-bar--with-nav">
    <div class="search-bar__filters-row">
        <!-- Search Input with Icon -->
        <div class="search-bar__input-container">
            <svg class="search-bar__icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" stroke="#9CA3AF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <input type="text" class="search-bar__input" name="SearchText" placeholder="Search..." value="@Model.SearchText" />
        </div>

        <!-- Date Dropdown -->
        <div class="search-bar__dropdown">
            <span class="search-bar__dropdown-label">Date</span>
            <select name="SelectedDate" class="search-bar__dropdown-select">
                @foreach (var option in Model.DateOptions)
                {
                    <option value="@option" selected="@(option == Model.SelectedDate ? "selected" : null)">@option</option>
                }
            </select>
        </div>

        <!-- Sort Dropdown -->
        <div class="search-bar__dropdown">
            <span class="search-bar__dropdown-label">Sort</span>
            <select name="SelectedSort" class="search-bar__dropdown-select">
                @foreach (var sort in Model.SortOptions)
                {
                    <option value="@sort" selected="@(sort == Model.SelectedSort ? "selected" : null)">@sort</option>
                }
            </select>
        </div>

        <!-- Category Dropdown -->
        <div class="search-bar__dropdown">
            <span class="search-bar__dropdown-label">Category</span>
            <select name="SelectedCategory" class="search-bar__dropdown-select">
                <option value="">Any</option>
                @foreach (var category in Model.CategoryOptions)
                {
                    <option value="@category" selected="@(category == Model.SelectedCategory ? "selected" : null)">@category.ToString()</option>
                }
            </select>
        </div>

        <!-- Search Button -->
        <button class="search-bar__button" type="submit">
            <svg class="search-bar__button-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <span class="search-bar__button-label">Search</span>
        </button>
    </div>
</form>