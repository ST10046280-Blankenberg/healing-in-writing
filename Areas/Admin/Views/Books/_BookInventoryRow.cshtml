@model List<HealingInWriting.Models.Books.BookInventoryRowViewModel>

@if (Model?.Any() == true)
{
    foreach (var book in Model)
    {
        <tr>
            <td>
                <div class="manage-books__book-info">
                    @if (!string.IsNullOrEmpty(book.ThumbnailUrl))
                    {
                        <img src="@book.ThumbnailUrl" alt="@book.Title" class="manage-books__book-cover" />
                    }
                    else
                    {
                        <img src="~/images/placeholder-book.svg" alt="Book cover placeholder" class="manage-books__book-cover" />
                    }
                    <span class="manage-books__book-name">@book.Title</span>
                </div>
            </td>
            <td>
                <span class="manage-books__book-authors">@book.Authors</span>
            </td>
            <td>
                <span class="manage-books__category">
                    @(book.Categories != null && book.Categories.Count > 0 ? string.Join(", ", book.Categories) : "Uncategorized")
                </span>
            </td>
            <td>
                <span class="manage-books__quantity">@book.Quantity</span>
            </td>
            <td>
                <span class="manage-books__condition-badge manage-books__condition-badge--@book.Condition.ToLowerInvariant()">@book.Condition</span>
            </td>
            <td>
                <label class="manage-books__toggle">
                    <input type="checkbox" @(book.IsVisible ? "checked" : "") />
                    <span class="manage-books__toggle-slider"></span>
                </label>
            </td>
            <td>
                <div class="manage-books__actions">
                    <button class="manage-books__action-btn manage-books__action-btn--edit" title="Edit" data-book-id="@book.BookId" type="button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none">
                            <path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7" stroke="#6B7280" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z" stroke="#6B7280" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </button>
                    <button class="manage-books__action-btn manage-books__action-btn--delete" title="Delete" data-book-id="@book.BookId" type="button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="16" viewBox="0 0 14 16" fill="none">
                            <path d="M1 4h12M4.5 4V2.5A1.5 1.5 0 016 1h2a1.5 1.5 0 011.5 1.5V4m2 0v9.5a1.5 1.5 0 01-1.5 1.5h-7A1.5 1.5 0 012 13.5V4h9.5z" stroke="#6B7280" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </button>
                </div>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="7">
            <div class="books__empty">
                <p>No books available at the moment. Check back soon!</p>
            </div>
        </td>
    </tr>
}
